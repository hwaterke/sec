  "scripts": {
    "gen:graphql": "(cd ./backend && yarn gen:schema) && graphql-codegen",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,scss,json,md,yml}\""
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.13.2",
    "@graphql-codegen/introspection": "1.13.2",
    "@graphql-codegen/typescript": "1.13.2",
    "@graphql-codegen/typescript-operations": "1.13.2",
    "@graphql-codegen/typescript-react-apollo": "1.13.2",
    "@graphql-codegen/typescript-resolvers": "1.13.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,json,md,yml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
